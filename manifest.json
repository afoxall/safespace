{
	"manifest_version":2,
	"name":"SafeSpace",
	"description":"Warning and protecting you from keywords, topics and phrases.",
	"version": "1.0",


	"browser_action":{
		"default_icon":"icon.png",
		"default_popup":"popup.html",
		"default_title":"SafeSpace"
	},
	"content_scripts": [ {
		
		"js": [ "scanner.js" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_idle"
	} ],
        
	"permissions":[
		"activeTab",
		"storage",
        "https://*/*",
        "https://*/*"
	]
}
